rules_version = '2';

// Firebase Storage Security Rules for Receipt Images
service firebase.storage {
  match /b/{bucket}/o {

    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if user is member of a couple
    function isCoupleMember(coupleId) {
      let coupleData = firestore.get(/databases/(default)/documents/couples/$(coupleId)).data;
      return coupleData.user1Id == request.auth.uid ||
             coupleData.user2Id == request.auth.uid;
    }

    // Helper function to validate receipt file type (images and PDFs)
    function isValidReceiptType() {
      return request.resource.contentType.matches('image/.*') ||
             request.resource.contentType == 'application/pdf';
    }

    // Helper function to validate file size (max 10MB for PDFs, images are typically smaller)
    function isValidSize() {
      return request.resource.size <= 10 * 1024 * 1024; // 10MB in bytes
    }

    // Receipt files storage (images and PDFs)
    // Path: /receipts/{coupleId}/{receiptId}
    match /receipts/{coupleId}/{receiptId} {
      // Allow read if user is a member of the couple
      allow read: if isSignedIn() && isCoupleMember(coupleId);

      // Allow write (upload/update) if:
      // - User is authenticated
      // - User is a member of the couple
      // - File is a valid receipt type (image or PDF)
      // - File size is within limits (10MB)
      allow write: if isSignedIn() &&
                      isCoupleMember(coupleId) &&
                      isValidReceiptType() &&
                      isValidSize();

      // Allow delete if user is a member of the couple
      allow delete: if isSignedIn() && isCoupleMember(coupleId);
    }

    // Receipt thumbnails storage (if needed in the future)
    // Path: /receipts/{coupleId}/thumbnails/{receiptId}
    match /receipts/{coupleId}/thumbnails/{receiptId} {
      // Same rules as regular receipts (images only for thumbnails)
      allow read: if isSignedIn() && isCoupleMember(coupleId);

      allow write: if isSignedIn() &&
                      isCoupleMember(coupleId) &&
                      request.resource.contentType.matches('image/.*') &&
                      isValidSize();

      allow delete: if isSignedIn() && isCoupleMember(coupleId);
    }

    // Deny all other storage paths by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
